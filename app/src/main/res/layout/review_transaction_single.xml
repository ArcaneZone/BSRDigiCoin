<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:background="@drawable/background_border"
    android:weightSum="4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1">
        <TextView
            android:id="@+id/adm_transaction_nameStock"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/only_top_left"
            android:text="@string/decoin_stock"
            android:layout_weight="1"
            android:textSize="20sp"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/adm_transaction_userName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/only_top_right"
            android:text="@string/decoin_stock"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            tools:ignore="NestedWeights" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1">

        <TextView
            android:id="@+id/adm_transaction_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/straight_corners"
            android:layout_weight="1"
            android:text="25-DEC-2021"
            android:drawableStart="@drawable/ic_date"
            android:paddingStart="20dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/adm_transaction_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/straight_corners"
            android:paddingStart="20dp"
            android:text="09:21PM"
            android:drawableStart="@drawable/ic_time"
            android:gravity="center"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1">

        <TextView
            android:id="@+id/adm_transaction_stockType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:text="BUY"
            android:textSize="18dp"
            android:drawableStart="@drawable/ic_transaction"
            android:background="@drawable/straight_corners"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/adm_transaction_purchasedAt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/straight_corners"
            android:gravity="center"
            android:drawableStart="@drawable/ic_money"
            android:paddingStart="20dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="4000(2000)" />
        <TextView
            android:id="@+id/adm_transaction_noOfStocks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/straight_corners"
            android:gravity="center"
            android:paddingStart="20dp"
            android:text="20"
            android:textSize="18dp"
            android:drawableStart="@drawable/ic_transaction"
            android:textAlignment="center"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/envelop_corners"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_transaction_isApproved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Approve"
            android:background="@drawable/background_border"
            app:icon="@drawable/ic_check_circle"
            android:textSize="18sp"
            android:textColor="@color/teal_200"
            app:iconTint="@color/teal_200"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_transaction_isNotApproved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:icon="@drawable/ic_times_circle"
            android:background="@drawable/background_border"
            android:text="Deny"
            android:textSize="18sp"
            android:textColor="#fb4934"
            app:iconTint="#fb4934"
            />

    </LinearLayout>

</LinearLayout>