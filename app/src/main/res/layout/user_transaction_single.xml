<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:background="@drawable/background_border"
    android:weightSum="3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#2e2d2d"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/txt_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Siddhi Anil Bairagi"
            android:textColor="#ebdbb2"
            android:drawableStart="@drawable/ic_user"
            android:paddingStart="20dp"
            android:drawableTint="#b8bb26"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_no_of_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#ebdbb2"
            android:drawableStart="@drawable/ic_stocks"
            android:paddingStart="20dp"
            android:drawableTint="#b8bb26"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2e2d2d"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_stock_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="25-DEC-2021"
            android:textColor="#ebdbb2"
            android:drawableStart="@drawable/ic_date"
            android:paddingStart="20dp"
            android:drawableTint="#b8bb26"
            android:layout_marginStart="2dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_stock_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:text="09:21PM"
            android:textColor="#ebdbb2"
            android:layout_marginStart="2dp"
            android:drawableStart="@drawable/ic_time"
            android:drawableTint="#b8bb26"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2E2D2D"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_stock_transaction_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:text="BUY"
            android:textColor="#ebdbb2"
            android:textSize="18dp"
            android:drawableStart="@drawable/ic_transaction"
            android:drawableTint="#b8bb26"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txt_stock_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_money"
            android:drawableTint="#b8bb26"
            android:paddingStart="20dp"
            android:layout_marginStart="2dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="4000(2000)"
            android:textAlignment="center"
            android:textColor="#ebdbb2"/>
    </LinearLayout>

</LinearLayout>